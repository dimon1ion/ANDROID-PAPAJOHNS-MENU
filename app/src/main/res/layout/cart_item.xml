<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza_category"
                android:id="@+id/image_avatar"/>
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/transparent"
                android:padding="0dp"
                />
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:text="Pizza"
                android:layout_toRightOf="@id/image_avatar"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="category"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image_avatar"
                android:layout_below="@id/text_name"
                android:id="@+id/text_category"
                android:textColor="@color/white"/>
            <RelativeLayout
                android:id="@+id/relative_num_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/text_category"
                android:layout_toRightOf="@id/image_avatar"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="-"
                    android:padding="0dp"
                    android:backgroundTint="#E91E63"
                    android:src="@drawable/baseline_horizontal_rule_24"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/edit_num"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/btn_minus"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:textSize="12sp"
                    />

                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@id/edit_num"
                    android:backgroundTint="#E91E63"
                    android:padding="0dp"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </RelativeLayout>
            <TextView
                android:id="@+id/text_totalSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/text_currency"
                android:layout_below="@id/relative_num_edit"
                android:text="0.0"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/text_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/relative_num_edit"
                android:text="â‚¼"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>